{
	"pattern": "test.volt",
	"testCommandPrefix": "//T ",
	"macros": {
		"default": [
			"//T run:volta -o %t %s",
			"//T run:%t"
		],
		"expect-failure": [
			"//T retval:1",
			"//T run:volta -o %t %s"
		],
		"debug": [
			"//T run:volta --debug -o %t %s",
			"//T run:%t"
		],
		"release": [
			"//T run:volta --release -o %t %s",
			"//T run:%t"
		],
		"do-not-link": [
			"//T run:volta -c -o %t %s"
		],
		"syntax-only": [
			"//T run:volta -c -E %s"
		],
		"import": [
			"//T run:volta -o %t %s --src-I %S/../deps",
			"//T run:%t"
		],
		"importfail": [
			"//T retval:1",
			"//T run:volta -o %t %s --src-I %S/../deps"
		],
		"res": [
			"//T run:volta -o %t %s -J %S/../res",
			"//T run:%t"
		],
		"warnings": [
			"//T run:volta -o %t %s -w",
			"//T run:%t"
		],
		"abi": [
			"//T run:volta --internal-dbg -c %s"
		],
		"win64abi": [
			"//T run:cl /c /Fo%t.obj %S/abitest.c",
			"//T run:volta --internal-dbg -o %t %s %t.obj",
			"//T run:%t"
		],
		"lin32abi": [
			"//T run:cc -c -o %t.o %S/abitest.c",
			"//T run:volta --internal-dbg -o %t %s %t.o",
			"//T run:%t"
		]
	},
	"requiresAliases": {
		"exceptions": "!windows",
		"sysvamd64": "posix && x86_64",
		"win64": "windows && x86_64",
		"lin32": "linux && x86"
	}
}
